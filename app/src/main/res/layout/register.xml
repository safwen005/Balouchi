<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="viewmodel"
            type="com.example.balouchi.ui.register.Register_viewmodel" />
    </data>

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    >

    <LinearLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            tools:ignore="NestedWeights">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_input"
                android:layout_width="@dimen/_250sdp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_10ssp"
                    android:background="@drawable/edit_gray"
                    android:textAlignment="viewEnd"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textColorHint="@color/black"
                    android:hint="البريد الألكتروني"
                    android:textColor="@color/black"
                    android:maxLength="50"
                    android:inputType="textEmailAddress"
                    android:text="@={viewmodel.email}"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_input"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                app:passwordToggleEnabled="true"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_gray"
                    android:textSize="@dimen/_10ssp"
                    android:inputType="textPassword"
                    android:textAlignment="viewStart"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:maxLength="30"
                    android:hint="كلمة المرور"
                    android:text="@={viewmodel.password}"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_repeat_input_"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                app:boxBackgroundMode="none"
                app:hintEnabled="false"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_repeat_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_gray"
                    android:textSize="@dimen/_10ssp"
                    android:inputType="textPassword"
                    android:textAlignment="viewStart"
                    android:paddingStart="@dimen/_10sdp"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:maxLength="30"
                    android:hint="إعادة كلمة المرور"
                    android:text="@={viewmodel.password2}"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_weight="1.1"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/checkbox"
                    android:layout_centerInParent="true"
                    >
                    <TextView
                        android:layout_weight="2.5"
                        android:textSize="@dimen/_8ssp"
                        android:gravity="center"
                        android:textColor="#8E8D8D"
                        android:text="التحقق"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <RelativeLayout
                            android:layout_weight="1.5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <ProgressBar
                                android:visibility="invisible"
                                android:id="@+id/progress"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerInParent="true"
                                />
                            <pl.droidsonroids.gif.GifImageView
                                android:visibility="invisible"
                                android:id="@+id/check"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerInParent="true"
                                />
                            <ImageView
                                android:id="@+id/empty"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/checkbox"
                                android:onClick="@{viewmodel::Click}"
                                />
                        </RelativeLayout>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/black"
                            android:text="لست روبوت"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:gravity="end|center_vertical"
                            />
                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_captcha"
                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_marginStart="@dimen/_35sdp"
                android:gravity="center_vertical"
                >
                <CheckBox
                    android:id="@+id/agree"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:checked="@={viewmodel.checked}"
                    />
                <TextView
                    android:fontFamily="@font/et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8ssp"
                    android:text="أوافق على"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />
                <TextView
                    android:fontFamily="@font/et"
                    android:id="@+id/bounoud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8ssp"
                    android:text="البنود"
                    android:textStyle="bold"
                    android:textColor="@color/strong_blue"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:onClick="@{viewmodel::Click}"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8ssp"
                    android:text="و"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />
                <TextView
                    android:fontFamily="@font/et"
                    android:id="@+id/siasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8ssp"
                    android:text="سياسة الخصوصية"
                    android:textStyle="bold"
                    android:textColor="@color/strong_blue"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:onClick="@{viewmodel::Click}"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1.25"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_11sdp"
                >
                <com.google.android.material.button.MaterialButton
                    android:fontFamily="@font/et"
                    android:id="@+id/register"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn"
                    style="@style/blue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold"
                    android:text="تسجيل"
                    android:onClick="@{viewmodel::Click}"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1.35"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_8sdp"
                >
                <com.google.android.material.button.MaterialButton
                    android:fontFamily="@font/et"
                    android:id="@+id/backreg"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/_140sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn"
                    style="@style/blue"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold"
                    android:text="العودة"
                    android:onClick="@{viewmodel::Click}"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>

</layout>