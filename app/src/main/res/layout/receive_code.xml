<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            app:srcCompat="@drawable/ic_thekey"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_180sdp"
            android:layout_below="@id/img"
            android:orientation="vertical"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="@dimen/_10sdp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/layout_toolbar"
                    >

                    <LinearLayout
                        android:layout_weight="1.2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_weight="1.4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <TextView
                                android:id="@+id/message"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="ضع الرمز هنا"
                                android:textSize="@dimen/_15ssp"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_margin="@dimen/_7sdp"
                                android:layout_centerInParent="true"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            >
                            <com.chaos.view.PinView
                                android:id="@+id/pin"
                                android:layout_centerInParent="true"
                                style="@style/PinWidget.PinView"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:cursorVisible="true"
                                android:inputType="numberSigned"
                                android:padding="10dp"
                                android:textColor="@color/white"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                app:cursorColor="@color/white"
                                app:cursorWidth="2dp"
                                app:hideLineWhenFilled="false"
                                app:itemCount="6"
                                app:itemHeight="@dimen/_30sdp"
                                app:itemSpacing="0dp"
                                app:itemWidth="@dimen/_30sdp"
                                app:lineColor="@color/black"
                                app:lineWidth="3dp"
                                app:viewType="rectangle" />
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_weight="1.3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            >
                            <TextView
                                android:id="@+id/aa"
                                android:textSize="@dimen/_11ssp"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:text=" إعادة إرسال"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/bb"
                                android:textSize="@dimen/_11ssp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:text="لم تستلم الرمز ؟"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:layout_marginEnd="@dimen/_25sdp"
                        >
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/backr"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/red"
                            android:textSize="@dimen/_9ssp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="العودة"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/search"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/_9ssp"
                            android:layout_marginStart="@dimen/_5sdp"
                            style="@style/blue"
                            android:text="وافق"
                            />
                    </LinearLayout>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>