<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_110sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_7sdp"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/layout_toolbar"
        >

        <RelativeLayout

            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/thepic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/loadd"
                />

            <ImageView
                android:id="@+id/iimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_alignParentEnd="true"
                />

            <ImageView
                android:id="@+id/cancel"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                app:srcCompat="@drawable/ic_cchange"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_5sdp"
                />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              >

            <ImageView
                android:id="@+id/remove"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_rec_delete"
                android:layout_margin="@dimen/_18sdp"
                />
            <ImageView
                android:id="@+id/edit"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_rec_edit"
                android:layout_margin="@dimen/_16sdp"
                />
          </LinearLayout>
        </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

    <TextView
        android:fontFamily="@font/items"
        android:id="@+id/nname"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_3sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        android:singleLine="true"
        android:gravity="right|center_vertical"
        />
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                >
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_location_gray"
                    />
                <TextView
                    android:fontFamily="@font/items"
                    android:id="@+id/llocation"
                    android:layout_width="@dimen/_117sdp"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9ssp"
                    android:gravity="right|center_vertical"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:singleLine="true"
                    android:maxLength="50"
                    />
            </LinearLayout>
        <TextView
            android:fontFamily="@font/items"
            android:id="@+id/pprice"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:layout_margin="@dimen/_3sdp"
            android:textColor="@color/strong_blue"
            android:textSize="@dimen/_11ssp"
            android:singleLine="true"
            android:gravity="right|center_vertical"
            />
    </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>