<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#ffff</item>
        <item name="colorControlNormal">@color/softgray</item>
        <item name="colorControlActivated">@color/soft_blue</item>
        <item name="colorControlHighlight">@color/soft_blue</item>
    </style>



    <!-- Navigation Menu Items -->
    <style name="menu" parent="Theme.AppCompat">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="blue"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/BlueButtonThemeOverlay</item>
    </style>
    <style name="orange"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/OrangeButtonThemeOverlay</item>
    </style>

    <style name="red"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/RedButtonThemeOverlay</item>
    </style>
    <style name="green"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/GreenButtonThemeOverlay</item>
    </style>


    <style name="BlueButtonThemeOverlay">
        <item name="colorPrimary">#4D7CC3</item>
    </style>
    <style name="OrangeButtonThemeOverlay">
        <item name="colorPrimary">#2196F3</item>
    </style>
    <style name="RedButtonThemeOverlay">
        <item name="colorPrimary">#BC1515</item>
    </style>
    <style name="GreenButtonThemeOverlay">
        <item name="colorPrimary">#7EC62B</item>
    </style>

    <style name="switche" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#008EFF</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>




        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="tab_font" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/et</item>
    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>



</resources>
